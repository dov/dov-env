[giggle]
	main-window-maximized = false
	main-window-geometry = 1470x953+212+45
	main-window-view = HistoryView
	history-view-vpane-position = 411
	file-view-vpane-position = 552
	show-graph = true
[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
[core]
	autocrlf = input
